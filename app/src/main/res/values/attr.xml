<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomRecyclerView">
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
            <enum name="grid" value="2" />
        </attr>
        <attr name="span_size" format="integer" />
    </declare-styleable>
    <declare-styleable name="CustomTextView">
        <attr name="fontStyle" format="enum">
            <enum name="gotham-regular" value="0" />
            <enum name="gotham-semi-bold" value="1" />
            <enum name="gotham-bold" value="2" />
        </attr>
    </declare-styleable>
</resources>