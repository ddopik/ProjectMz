<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/car_info_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginEnd="@dimen/activity_vertical_margin"
    android:layout_marginStart="@dimen/activity_vertical_margin"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dp8">

    <ImageView
        android:id="@+id/model_image"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.spade.mazda.CustomViews.CustomTextView
            android:id="@+id/model_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="@dimen/dp8"
            android:paddingStart="@dimen/dp8"
            android:textAllCaps="true"
            android:textSize="@dimen/material_text_subhead"
            app:color="@color/lightBlue"
            app:fontTypeFaceStyle="gotham-semi-bold"
            tools:text="Mazda 2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.spade.mazda.CustomViews.CustomTextView
                    android:id="@+id/model_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:gravity="start"
                    android:paddingLeft="@dimen/dp8"
                    android:paddingStart="@dimen/dp8"
                    android:text="@string/model"
                    android:textAllCaps="true"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/material_text_caption"
                    app:fontTypeFaceStyle="gotham-regular" />

                <com.spade.mazda.CustomViews.CustomTextView
                    android:id="@+id/model_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:gravity="start"
                    android:paddingLeft="@dimen/dp8"
                    android:paddingStart="@dimen/dp8"
                    android:text="@string/color"
                    android:textAllCaps="true"

                    android:textColor="@color/grey"
                    android:textSize="@dimen/material_text_caption"
                    app:fontTypeFaceStyle="gotham-regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:orientation="vertical">

                <com.spade.mazda.CustomViews.CustomTextView
                    android:id="@+id/chassis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:gravity="start"
                    android:paddingLeft="@dimen/dp8"
                    android:paddingStart="@dimen/dp8"
                    android:text="@string/chassis_number"
                    android:textAllCaps="true"

                    android:textColor="@color/grey"
                    android:textSize="@dimen/material_text_caption"
                    app:fontTypeFaceStyle="gotham-regular" />

                <com.spade.mazda.CustomViews.CustomTextView
                    android:id="@+id/motor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8"
                    android:gravity="start"
                    android:paddingLeft="@dimen/dp8"
                    android:paddingStart="@dimen/dp8"
                    android:text="@string/motor_number"
                    android:textAllCaps="true"

                    android:textColor="@color/grey"
                    android:textSize="@dimen/material_text_caption"
                    app:fontTypeFaceStyle="gotham-regular" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>