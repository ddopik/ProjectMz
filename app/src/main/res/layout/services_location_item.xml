<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/activity_vertical_margin"
    android:layout_marginStart="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blue_rounded_background"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <com.spade.mazda.CustomViews.CustomTextView
        android:id="@+id/location_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textSize="@dimen/material_text_subhead"
        app:fontTypeFaceStyle="gotham-semi-bold"
        tools:text="Location Name" />

    <com.spade.mazda.CustomViews.CustomTextView
        android:id="@+id/location_district"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dp8"
        android:textSize="@dimen/material_text_subhead"
        app:fontTypeFaceStyle="gotham-regular"
        tools:text="Location Name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp2"
        android:layout_marginBottom="@dimen/dp8"
        android:layout_marginTop="@dimen/dp8"
        android:background="@color/blue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.spade.mazda.CustomViews.CustomTextView
            android:id="@+id/start_day_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/material_text_subhead"
            app:fontTypeFaceStyle="gotham-semi-bold"
            tools:text="Location Name" />

        <com.spade.mazda.CustomViews.CustomTextView
            android:id="@+id/to_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_toEndOf="@id/start_day_text_view"
            android:layout_toRightOf="@id/start_day_text_view"
            android:paddingEnd="@dimen/dp8"
            android:paddingStart="@dimen/dp8"
            android:text="@string/to"
            android:textSize="@dimen/material_text_subhead"
            app:color="@color/blue"
            app:fontTypeFaceStyle="gotham-semi-bold" />

        <com.spade.mazda.CustomViews.CustomTextView
            android:id="@+id/end_day_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_toEndOf="@id/to_text_view"
            android:layout_toRightOf="@id/to_text_view"
            android:textSize="@dimen/material_text_subhead"
            app:fontTypeFaceStyle="gotham-semi-bold"
            tools:text="Location Name" />
    </RelativeLayout>

    <com.spade.mazda.CustomViews.CustomTextView
        android:id="@+id/times_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dp8"
        android:textSize="@dimen/material_text_subhead"
        app:fontTypeFaceStyle="gotham-regular"
        tools:text="Location Name" />
</LinearLayout>