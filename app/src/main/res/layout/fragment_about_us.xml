<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">


    <ImageView
        android:id="@+id/about_main_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:src="@drawable/about_logos" />

    <TextView
        android:id="@+id/about_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_main_image"
        android:padding="@dimen/material_text_subhead"
        android:textColor="@color/white"
        android:text="@string/about_us_text" />

    <LinearLayout
        android:id="@+id/call_block"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_text"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp14"
        android:background="@drawable/camera_bordered_background_blue"
        android:orientation="horizontal"
        android:padding="@dimen/dp16">

        <ImageView
            android:id="@+id/call_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dp12"
            android:src="@drawable/call_about" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/call_now_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/call_now"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/material_text_headline"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/services_center_txt"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/social_bar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call_block"
        android:text="@string/about_check_social"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/material_text_subhead" />

    <LinearLayout
        android:id="@+id/social_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/social_bar_title"
        android:gravity="center"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/face_book_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp14"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/twitter_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp14"
            android:src="@drawable/twitter"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/insta_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp14"
            android:src="@drawable/instagram"
             />

        <ImageView
            android:id="@+id/youtube_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp14"
            android:src="@drawable/youtube" />
    </LinearLayout>

</RelativeLayout>
</ScrollView>