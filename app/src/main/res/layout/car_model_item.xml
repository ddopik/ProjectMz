<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp8"
    android:layout_marginStart="@dimen/dp8"
    android:layout_marginTop="@dimen/dp8"
    android:background="@drawable/blue_rounded_background"
    android:orientation="horizontal"
    android:padding="@dimen/dp8">

    <ImageView
        android:id="@+id/model_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/model_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            android:gravity="start"
            android:paddingLeft="@dimen/dp8"
            android:paddingStart="@dimen/dp8"
            android:textColor="@color/white"
            android:textSize="@dimen/material_text_subhead"
            tools:text="Mazda 2" />

        <TextView
            android:id="@+id/model_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            android:gravity="start"
            android:maxLines="3"
            android:paddingLeft="@dimen/dp8"
            android:paddingStart="@dimen/dp8"
            android:textColor="@color/grey"
            android:textSize="@dimen/material_text_subhead"
            tools:text="Mazda 2" />

        <TextView
            android:id="@+id/view_car_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp8"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginStart="@dimen/dp4"
            android:layout_marginTop="@dimen/dp8"
            android:background="@drawable/white_border_rounded_button"
            android:paddingBottom="@dimen/dp4"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/dp4"
            android:text="@string/car_details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/material_text_caption" />
    </LinearLayout>
</LinearLayout>